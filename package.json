{
  "name": "servinly-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "dev:vercel": "vercel dev --port 3000",
    "dev:clean": "./scripts/dev-start.sh",
    "dev:3001": "PORT=3001 npm run dev",
    "dev:seed-auth": "ts-node -T scripts/dev-seed-auth.ts",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:onboarding": "jest --testPathPattern=onboarding",
    "type:onboarding": "tsc -p tsconfig.onboarding.json --noEmit",
    "auth:test": "node --env-file=.env.local scripts/test-user-login.ts",
    "auth:seed": "node --env-file=.env.local scripts/ensure-dev-user.ts",
    "audit:deploy": "node scripts/audit-deployment-setup.ts",
    "zip:feature": "git ls-files | zip -@ servinly-feature-$(date +%Y%m%d-%H%M).zip",
    "cleanup": "./server-cleanup.sh",
    "clean": "rm -rf .next .turbo .vercel/output"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/auth-helpers-react": "^0.5.0",
    "@supabase/supabase-js": "^2.53.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.536.0",
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swr": "^2.3.6",
    "zod": "^4.0.17",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.0.5",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.1",
    "typescript": "^5",
    "whatwg-fetch": "^3.6.20"
  }
}
